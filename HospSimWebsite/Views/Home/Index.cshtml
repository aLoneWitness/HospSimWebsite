@{
    ViewData["Title"] = "Home Page";
    
}
@model HospSimWebsite.Models.FormModel

<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Fairbanks | Patient Registration</title>
</head>
<body>
<div class="card-header">
    <h2 class="title"><span id="hospitalname">Fairbanks</span> | Patient Registration </h2>
</div>

<div class="formmain">
    <form asp-controller="Form" asp-action="Submit" method="post">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="InputName" type="text" class="form-control" placeholder="Jack Something">
        </div>
        <label>Adress</label>

        <div class="form-group" id="adressform">
            <div id="adressdiv">
                <input asp-for="InputAdressText" type="text" class="form-control">
            </div>
            <div id="housenumdiv">
                <input asp-for="InputAdressNum" type="number" class="form-control">
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="InputDisease">Diagnosis (Doctor approval only)</label>
            <select asp-for="InputDisease" class="form-control" id="inputDisease">
                <option>Owo</option>
                <option>Bwb</option>
                <option>Cwc</option>
                <option>Dwd</option>
            </select>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
</body>
</html>
