@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Fairbanks | Patient Registration</title>
</head>
<body>
<div class="card-header">
    <h2 class="title"><span id="hospitalname">Fairbanks</span> | Patient Registration </h2>
</div>

<div class="formmain">
    <form>
        <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" placeholder="Jack Something">
        </div>
        <label for="inputAdress">Adress</label>

        <div class="form-group" id="adressform">
            <div id="adressdiv">
                <input type="text" class="form-control">
            </div>
            <div id="housenumdiv">
                <input type="number" class="form-control">
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
</body>
</html>
