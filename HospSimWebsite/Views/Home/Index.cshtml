@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Fairbanks | Patient Registration</title>
</head>
<body>
<div class="card-header">
    <h2 class="title"><span id="hospitalname">Fairbanks</span> | Patient Registration </h2>
</div>

<div class="formmain">
    <form>
        <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" placeholder="Jack Something">
        </div>
        <div class="form-group">
            <label for="inputBirthday">Date of birth</label>
            <input type="date" class="form-control" >
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
</body>
</html>
